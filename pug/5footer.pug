- 
  var footerNav = [
    {url: 'buy.html', name: 'Buy This Theme'}, 
    {url: 'contact.html', name: 'Contact Us'},
    {url: 'faq.html', name: 'FAQ'}, 
    {url: 'who.html', name: 'Who we are?'}
  ];

mixin footerNav(url, name)
    li.footer-nav-item
        a.footer-nav-item__link(href=url) #{name}

.footer
    .section-container
      .footer__logo-holder
          a.logo(href="index.html")
              .logo__name oxxo 
              .logo__slogan responsive theme
      .copyright 2014 Â® All Rights Reserved - OXXO Responsive Theme
      ul.footer-nav
          each i in footerNav
              +footerNav (i.url, i.name)
