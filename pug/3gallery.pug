mixin filterList (itemName, itemClass)
    if itemClass=='photo'
        a.works__element.filter-item.works__element_active(data-filter=`.${itemClass}`) #{itemName}
    else
        a.works__element.filter-item(data-filter=`.${itemClass}`) #{itemName}

mixin workList (imgNumber, imgTitle, imgTag, itemClass)
    li(class=`works-item ${itemClass}`)
        .works-item-holder
            .works-img-holder
                img.works-img(src=`images/Portfolio-Image-${imgNumber}.png` alt=`${imgTitle}`)
                .works__element.works-overlay
                    a.works-overlay-icons-holder(href=`images/Portfolio-Image-${imgNumber}.png` data-fancybox="images")
                        i.fas.fa-expand-arrows-alt
                    a.works-overlay-icons-holder(href="works_page.html")
                        i.fas.fa-external-link-alt
            .works-item-title #{imgTitle}
            .works-item-type #{imgTag}

section.works
    .section-container
        .works-filter
            .filter-list
                each i in filterItems
                    +filterList(i.itemName, i.itemClass)
        ul.works-list
            - for (var x=0; x<3; x++)
                each i in imgItems
                    +workList(i.imgNumber, i.imgTitle, i.imgTag, i.itemClass)    
        