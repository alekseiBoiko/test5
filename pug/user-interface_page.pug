                            i.fas.fa-external-link-alt
                .works-item-title Yellow Old Car
                .works-item-type Retro, Yellow
        .isotope-pager
            a.pager.works__element &lt;
            a.pager.works__element.works__element_active(href='javascript:void(0);' data-page='1') 1
            a.pager.works__element(href='javascript:void(0);' data-page='2') 2
            a.pager.works__element(href='javascript:void(0);' data-page='3') 3
            a.pager.works__element &gt;
    .about-us 
        .section-container
            .section-block-list 
