mixin filterList (itemName, itemClass)
    if itemClass=='photo'
        a.works__element.filter-item.works__element_active(data-filter=`.${itemClass}`) #{itemName}
    else
        a.works__element.filter-item(data-filter=`.${itemClass}`) #{itemName}

mixin socialList(iconPrefix, mediaUrl)
    li.social-item
        a.social-link(href=mediaUrl)
            i(class=`fab fa-${iconPrefix} ${iconClass}`)

mixin footerNav(url, name)
    li.footer-nav-item
        a.footer-nav-item__link(href=url) #{name}

doctype html
html(lang='en')
  head
    include head.pug    
  body
    include 1header.pug
    .about-us    
        .section-container
            ul.breadcrumb-list
                li.breadcrumb-list-item
                    a(href='') Home
                li.breadcrumb-list-item
                    a(href='') Pages
                li.breadcrumb-list-item
                    span.breadcrumb__page-name_active(aria-current='page') About Us Page
    .section-container
        br
        br
        .works-filter
            .filter-list
                each i in filterItems
                    +filterList(i.itemName, i.itemClass)
        .works-item
            .works-item-holder
                .works-img-holder
                    img.works-img(src=`images/Portfolio-Image-1.png`)
                    .works__element.works-overlay
                        a.works-overlay-icons-holder(href=`images/Portfolio-Image-1.png` data-fancybox="images")
